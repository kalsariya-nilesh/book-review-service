{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@book-review/db": ["packages/db/*"],
      "@book-review/models": ["packages/models/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}